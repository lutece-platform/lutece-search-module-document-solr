    <scm>
        <connection>scm:git:https://github.com/lutece-platform/lutece-search-module-document-solr.git</connection>
        <developerConnection>scm:git:https://github.com/lutece-platform/lutece-search-module-document-solr.git</developerConnection>
        <url>https://github.com/lutece-platform/lutece-search-module-document-solr.git</url>
